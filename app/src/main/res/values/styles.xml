<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    // Button style
    <style name="ButtonTheme" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:text">Def Button</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/buttonFont</item>
    </style>

    // View Floating Text
    <style name="FloatingTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/formFont</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:text">default form text</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    // Homework Floating Text
    <style name="HomeworkFloatingText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/formFont</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    // Progress Bar Floating Text
    <style name="ProgressBarFloatingText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/formFont</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">0% Done</item>
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    // Instruction Text
    <style name="InstructionTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/formFont</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:text">default instruction text</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    // Form Text
    <style name="FormTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/formTextMaxWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/formFont</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:text">default form text</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    // Form Edit Text
    <style name="EditTextForm" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/formEditTextLeftMargin</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    // Dropdown/Spinner
    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/formEditTextLeftMargin</item>
    </style>

    // ScrollView
    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/layoutPadding</item>
        <item name="android:layout_marginBottom">@dimen/scrollViewBottomMargin</item>
    </style>

    // Email TextView
    <style name="EmailTextViewStyle" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/prompt_email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    // Password TextView
    <style name="PasswordTextViewStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/prompt_password</item>
        <item name="android:imeActionId">6</item>
        <item name="android:imeOptions">actionUnspecified</item>
        <item name="android:imeActionLabel">@string/action_sign_in_short</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
